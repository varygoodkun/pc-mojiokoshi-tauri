{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "文字起こしばりぐっど君【PC版】",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "request": true,
        "scope": [
          "https://asia-northeast1-varygoodkun-line-bot.cloudfunctions.net/apiPcMojiokoshi"
        ]
      },
      "dialog": {
        "open": true,
        "message": true
      },
      "fs": {
        "readFile": true,
        "scope": ["**"]
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": ["icons/icon.icns", "icons/icon.ico"],
      "identifier": "community.vgu.pc-mojiokoshi",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fileDropEnabled": false,
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "文字起こしばりぐっど君",
        "width": 800
      }
    ]
  }
}
